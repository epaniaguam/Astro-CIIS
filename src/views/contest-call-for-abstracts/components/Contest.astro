---
interface ContestProps {
  title: string;
  description: string;
  image: string;
  date: string;
  time: string;
  place: string;
  base_rules: string;
  link_form: string;
}

const { title, description, image, date, time, place, base_rules, link_form } = Astro.props;
---

<div class="flex justify-center items-center min-h-screen bg-transparent px-6">
  <div class="w-full max-w-6xl rounded-3xl overflow-hidden shadow-2xl slide-in-left">
    <div class="flex flex-col lg:flex-row items-stretch">
      <!-- Left: contenido principal -->
      <div class="w-full lg:w-1/2 p-8 lg:p-12 bg-transparent text-white flex flex-col justify-between">
        <!-- TÃ­tulo principal -->
        <div class="space-y-4">
          <h4 class="text-3xl sm:text-4xl font-extrabold text-blue-200 leading-tight">
            {title}
          </h4>

          <h5 class="text-xl font-semibold text-blue-300">
            Acerca del evento
          </h5>

          <p class="text-sm sm:text-base font-normal leading-relaxed text-gray-300">
            {description}
          </p>
        </div>

        <!--Fecha/Hora/Lugar -->
        <div class="mt-6">
          <div class="bg-[rgba(8,12,30,0.6)] rounded-xl p-5 space-y-4">
            <!--Fecha -->
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 flex-shrink-0 text-blue-300" viewBox="0 0 24 24" fill="none" aria-hidden>
                <path d="M7 11h5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <rect x="3" y="5" width="18" height="16" rx="2" stroke="currentColor" stroke-width="1.5"/>
                <path d="M16 3v4M8 3v4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
              <div>
                <div class="text-sm text-blue-200 font-semibold">Fecha</div>
                <div class="text-sm text-gray-100 font-medium">{date}</div>
              </div>
            </div>

            <!--Hora -->
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 flex-shrink-0 text-blue-300" viewBox="0 0 24 24" fill="none" aria-hidden>
                <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="1.5"/>
                <path d="M12 7v6l4 2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <div>
                <div class="text-sm text-blue-200 font-semibold">Hora</div>
                <div class="text-sm text-gray-100 font-medium">{time}</div>
              </div>
            </div>

            <!--Lugar -->
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 flex-shrink-0 text-blue-300" viewBox="0 0 24 24" fill="none" aria-hidden>
                <path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 1 1 18 0z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="12" cy="10" r="2.5" fill="currentColor"/>
              </svg>
              <div>
                <div class="text-sm text-blue-200 font-semibold">Lugar</div>
                <div class="text-sm text-gray-100 font-medium">{place}</div>
              </div>
            </div>
          </div>
        </div>

        <!--Botones -->
        <div class="mt-6 flex flex-col sm:flex-row items-center sm:items-start gap-4 w-full">
        <a
            target="_blank"
            rel="noopener noreferrer"
            href={base_rules}
            class="w-full sm:w-1/2 text-center px-6 py-2 rounded-lg border border-blue-500 text-blue-200 hover:bg-blue-900/40 transition-all duration-300 text-base font-semibold"
        >
            Bases
        </a>

        <a
            target="_blank"
            rel="noopener noreferrer"
            href={link_form}
            class="w-full sm:w-1/2 text-center px-6 py-2 rounded-lg bg-blue-700 hover:bg-blue-800 text-white transition-all duration-300 text-base font-semibold"
        >
            Inscribirse
        </a>
        </div>
      </div>

      <!--Right: Imagen -->
      <div class="hidden lg:block w-full lg:w-1/2 h-[350px] lg:h-auto">
        <img
          src={image}
          alt="Imagen del evento"
          class="w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
  </div>
</div>

<style>
  .slide-in-left {
    animation: slide-in-left both;
    animation-timeline: view();
    animation-range-start: cover -10%;
    animation-range-end: contain 10%;
    animation-duration: 0.6s;
    animation-timing-function: cubic-bezier(0.250, 0.460, 0.450, 0.940);
  }

  @keyframes slide-in-left {
    0% {
      transform: translateX(-60px);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>
